<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/illness_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="cursive"
            android:text="Krankheit"
            android:textAlignment="center"
            android:textColor="#EBA5F7"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/layout_buttons">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="564dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_illness"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/rv_illness"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <TableLayout
            android:id="@+id/layout_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/illness_title"
            app:layout_constraintVertical_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_krankheitsbilder"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B34D86DC"
                    android:text="Krankheitsbilder"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/button_ursachen"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B34D86DC"
                    android:text="Ursachen"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_aufklaerung"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B34D86DC"
                    android:text="Aufklärung"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />

                <Button
                    android:id="@+id/button_praevention"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#B34D86DC"
                    android:text="Prävention"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>