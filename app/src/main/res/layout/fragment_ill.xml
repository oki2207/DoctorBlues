<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_buttons">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/head_ill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="cursive"
                        android:text="Krankheitsbilder"
                        android:textAlignment="center"
                        android:textColor="#EBA5F7"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/infotext_ill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="30dp"
                        android:fontFamily="@font/roboto"
                        android:text="Die Gemütszustände, in die eine Mutter rund um die Geburt des Kindes geraten kann, gliedern sich vorrangig in drei verschiedene Kategorien:   das postpartale Stimmungstief (Baby-Blues),  die peripartale Depression, Angst- und Zwangsstörung und  die peripartale Psychose.   Diese Gruppen stehen nicht isoliert nebeneinander, sondern gehen oft fließend ineinander über."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/head_ill" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>

        <TableLayout
            android:id="@+id/layout_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_krankheitsbilder"
                    android:layout_width="9dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4D86DC"
                    android:text="Krankheitsbilder"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/button_ursachen"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4D86DC"
                    android:text="Ursachen"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button_aufklaerung"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4D86DC"
                    android:text="Aufklärung"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />

                <Button
                    android:id="@+id/button_praevention"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4D86DC"
                    android:text="Prävention"
                    app:strokeColor="#EBA5F7"
                    app:strokeWidth="2sp" />
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>